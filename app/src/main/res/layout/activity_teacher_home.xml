<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".teacher.Home">
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/teacher_home_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/teacher_home_no_classes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="40dp"
		android:gravity="center"
		android:text="@string/you_don_t_have_any_classes_yet_lets_add_one_by_clicking_the_below_button"
		android:textSize="20sp"
		android:textStyle="bold"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/teacher_home_floating_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="32dp"
		android:longClickable="true"
		android:src="@drawable/ic_add"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
